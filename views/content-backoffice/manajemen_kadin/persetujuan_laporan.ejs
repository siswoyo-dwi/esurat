  <section style="padding: 60px 0;">
    <div class="container">

      <div class="row">
        <div class="col-md-12 col-lg-12">
          <h2 class="text-center m-t-0 m-b-0"><strong>PERSETUJUAN E-LAPORAN</strong></h2>
        </div>
      </div>
      <div class="row" style="margin-top: 30px;">
        <div class="col-md-12 col-lg-12">
          <div class="panel" style="padding:30px">
            <div class="panel-content pagination2">
              <table class="table table-bordered table-striped table-hover" id="data">
                <thead>
                  <tr>
                    <th class="header" >No.</th>
                    <th class="header" >No. Surat</th>
                    <th class="header" >Pengirim</th>
                    <th class="header" >Perihal</th>
                    <th class="header" >Tanggal Pelaksanaan</th>
                    <th class="header" >Option</th>
    
                  </tr>
                </thead>
                <tbody>
                  <% for(var i=0; i<data.length; i++){ %>

                  <tr>
                    <td><%= i+1%></td>
                    <td><%= data[i].no_surat %></td>
                    <td><%= data[i].pengirim %></td>
                    <td><%= data[i].perihal %></td>
                    <td><%= data[i].start%> s/d <%= data[i].end%> </td>
                    <td>
                      <%if(data[i].status_surat<4 ){%>
                      <center><button class="btn btn-info btn-sm btn-embossed modal_persetujuan_laporan"  onclick="getData(<%= data[i].id_surat_masuk%>)"  data-toggle="modal" data-target=".modal-persetujuan">Persetujuan Laporan</button></center>
                      <%}else{%>
                        <center><button class="btn btn-info btn-sm btn-embossed"  onclick="detail(<%= data[i].id_surat_masuk%>)">Detail</button></center>
                        <%}%>
                    </td>
                  </tr>
                  <%}%>

                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
