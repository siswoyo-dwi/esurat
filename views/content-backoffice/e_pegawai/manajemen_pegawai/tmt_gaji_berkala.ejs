<% include ../../../template-backoffice/e_pegawai/header.ejs %>

<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
  <div class="header">
    <h2><strong>Data TMT Gaji Berkala</strong></h2>
    <div class="breadcrumb-wrapper">
      <ol class="breadcrumb">
        <li><a href="/backoffice">Dashboard</a>
        </li>
        <li class="active">Data</li>
      </ol>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
      <div class="panel">
        <div class="panel-header header-line">
           
        </div>
        <div class="panel-content pagination2">
          <table class="table table-bordered table-striped table-hover" id="data">
            <thead>
              <tr>
                <th class="header">No.</th>
                <th class="header">Nama</th>
                <th class="header">NIP</th>
                <th class="header">Unit Kerja</th>
                <th class="header">Jabatan</th>
                <th class="header">Pangkat/Golongan</th>
                <th class="header">TMT Gaji Berlaka</th>
              </tr>
            </thead>
            
            <tbody>
              <% for(let i=0; i<data.length; i++){ %>
                <tr>
                <td><%=i+1 %></td>
                <td><%= data[i].fullname%></td>
                <td><%= data[i].NIP%></td>
                <td><%= data[i].unit_kerja%></td>
                <td><%= data[i].jabatan%></td>
                <td><%= data[i].golongan%></td>
                <% if(data[i].tmt>0){%>
                <td>expired</td>
                <%}else if(data[i].tmt<0){%>
                  <td><%= Math.abs(data[i].tmt) %> hari</td>
                  <%}else{%>
                    <td><%= data[i].tmt %></td>
                  <%}%>
              </tr>
              <%}%>
            </tbody>
          </table>
        </div>
      </div>
    </div>  
  </div>
  <div class="footer">
    <div class="copyright">
      <p class="pull-left sm-pull-reset">
        <span>Copyright <span class="copyright">Â©</span> 2021 </span>
        <span>Pemerintah Kabupaten Sukoharjo | Badan Perencanaan, Penelitian, dan Pengembangan Daerah</span>.
      </p>
    </div>
  </div>
</div>
<!-- END PAGE CONTENT -->

